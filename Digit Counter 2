import java.util.Scanner;

public class MainClass {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int N = sc.nextInt();
        N = Math.abs(N);
        if (N == 0) {
            System.out.println(1);
            return;
        }

        int count = 0;

        while (N != 0) {
            count++;
            N = N / 10;
        }

        System.out.println(count);
    }
}
